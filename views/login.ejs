<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Login | CubeFactory</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body,
        html {
            font-family: Arial, sans-serif;
            height: 100%;
            width: 100%;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            display: flex;
            max-width: 900px;
            width: 100%;
            background-color: white;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        .left-panel {
            flex: 1;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .left-panel h1 {
            font-size: 1.8rem;
            margin-bottom: 10px;
        }

        .left-panel p {
            color: #666;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-top: 10px;
            font-weight: bold;
            color: #333;
        }

        input[type="text"],
        input[type="password"] {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-top: 5px;
        }

        /* Các thẻ hiển thị lỗi */
        .username.error,
        .password.error {
            color: red;
            font-size: 12px;
            margin-top: 5px;
        }

        button[type="submit"] {
            background-color: #1a202c;
            color: white;
            padding: 12px;
            border: none;
            border-radius: 5px;
            margin-top: 15px;
            cursor: pointer;
            font-size: 16px;
        }

        button[type="submit"]:hover {
            background-color: #2d3748;
        }

        .social-login {
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .social-login button {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            cursor: pointer;
            background-color: white;
            font-size: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .social-login button:hover {
            background-color: #f1f1f1;
        }

        .right-panel {
            flex: 1;
            background: url('/images/login2.jpg') no-repeat center center;
            background-size: cover;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
            }

            .right-panel {
                height: 300px;
            }
        }
    </style>
</head>
<script>
    // Kiểm tra token trong localStorage
    if (localStorage.getItem('access_token')) {
        window.location.href = '/'; // Nếu có access_token trong localStorage, chuyển hướng tới trang chủ
    }

    // Kiểm tra cookie session nếu có
    const cookies = document.cookie.split(';');
    let sessionFound = false;

    cookies.forEach(cookie => {
        if (cookie.trim().startsWith('access_token=')) {
            sessionFound = true;
        }
    });

    if (sessionFound) {
        window.location.href = '/'; // Nếu có access_token trong cookies, chuyển hướng tới trang chủ
    }
</script>


<body>
    <div class="container">
        <div class="left-panel">
            <h1>Login</h1>
            <p>Welcome back! Please enter your details</p>

            <form id="login-form">
                <label for="username">Username</label>
                <input type="text" name="username" id="username" required />
                <div class="username error"></div>

                <label for="password">Password</label>
                <input type="password" name="password" id="password" required />
                <div class="password error"></div>

                <button type="submit">Sign In</button>
            </form>

            <p style="margin-top: 10px;">Don't have an account? <a href="/v1/signup">Sign Up</a></p>

            <div class="social-login">
                <button>Sign in with Google</button>
                <button>Sign in with Facebook</button>
                <button>Sign in with Twitter</button>
            </div>
        </div>

        <div class="right-panel"></div>
    </div>

    <script>
        const form = document.querySelector('#login-form');
        const usernameErrDiv = document.querySelector('.username.error');
        const passwordErrDiv = document.querySelector('.password.error');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const username = document.querySelector('#username').value;
            const password = document.querySelector('#password').value;

            usernameErrDiv.textContent = '';
            passwordErrDiv.textContent = '';

            try {
                const res = await fetch('/v1/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username, password })
                });
                const data = await res.json();

                if (res.status === 200) {
                    // Lưu token vào cookies và LocalStorage
                    document.cookie = `access_token=${data.access_token}; path=/; max-age=86400; Secure`;
                    localStorage.setItem('access_token', data.access_token);

                    alert('Login successful!');
                    window.location.href = '/';
                } else {
                    passwordErrDiv.textContent = data.error || 'Login failed';
                }
            } catch (error) {
                passwordErrDiv.textContent = 'Something went wrong.';
            }
        });
    </script>
</body>

</html>