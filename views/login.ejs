<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Login | CubeFactory</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body,
        html {
            font-family: Arial, sans-serif;
            height: 100%;
            width: 100%;
            background-color: #f4f4f4;
        }

        .container {
            display: flex;
            flex-direction: row;
            width: 100%;
            height: 100vh;
        }

        .left-panel {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 40px;
            background-color: #ffffff;
        }

        .login-box {
            max-width: 350px;
            margin: 0 auto;
        }

        .login-box h1 {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .login-box p {
            margin-bottom: 2rem;
            color: #666;
        }

        .social-login {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f1f1f1;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            cursor: pointer;
            margin-bottom: 1rem;
        }

        .social-login img {
            width: 20px;
            height: 20px;
            margin-right: 8px;
        }

        .separator {
            text-align: center;
            margin: 1rem 0;
            color: #999;
            position: relative;
        }

        .separator::before,
        .separator::after {
            content: "";
            position: absolute;
            top: 50%;
            width: 40%;
            height: 1px;
            background: #ccc;
        }

        .separator::before {
            left: 0;
        }

        .separator::after {
            right: 0;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-top: 1rem;
            margin-bottom: 0.5rem;
            font-weight: bold;
            color: #333;
        }

        input[type="text"],
        input[type="password"] {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .error {
            color: red;
            font-size: 12px;
            margin-top: 5px;
        }

        .checkbox-row {
            display: flex;
            align-items: center;
            margin: 0.5rem 0 1rem 0;
        }

        .checkbox-row input[type="checkbox"] {
            margin-right: 8px;
        }

        .forgot-password {
            margin-left: auto;
            font-size: 0.9rem;
        }

        .forgot-password a {
            color: #007bff;
            text-decoration: none;
        }

        button[type="submit"] {
            width: 100%;
            background-color: #007bff;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 5px;
            margin-top: 1rem;
            cursor: pointer;
            font-size: 16px;
        }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

        .signup-row {
            text-align: center;
            margin-top: 1rem;
            font-size: 0.9rem;
        }

        .signup-row a {
            color: #007bff;
            text-decoration: none;
            margin-left: 5px;
        }

        .right-panel {
            flex: 1;
            background: url('/images/login2.jpg') no-repeat center center;
            background-size: cover;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
        }

        .right-panel .info-text {
            color: #fff;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }

        .right-panel h2 {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .right-panel p {
            font-size: 1rem;
            line-height: 1.5;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
            }

            .right-panel {
                display: none;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="left-panel">
            <div class="login-box">
                <h1>Welcome back</h1>
                <p>Please enter your details</p>

                <div class="social-login" id="google-login">
                    <img src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google Logo" />
                    <span>Sign in with Google</span>
                </div>

                <div class="separator">or</div>

                <form id="login-form">
                    <label for="username">Username</label>
                    <input type="text" name="username" id="username" required />
                    <div class="username error"></div>

                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" required />
                    <div class="password error"></div>

                    <div class="checkbox-row">
                        <input type="checkbox" id="rememberMe" name="rememberMe" />
                        <label for="rememberMe" style="margin: 0;">Remember me for 30 days</label>
                        <div class="forgot-password">
                            <a href="#">Forgot password?</a>
                        </div>
                    </div>

                    <button type="submit">Sign in</button>
                </form>

                <div class="signup-row">
                    <span>Don't have an account?</span>
                    <a href="/v1/signup">Sign up</a>
                </div>
            </div>
        </div>

        <div class="right-panel">
            <div class="info-text">
                <h2>Bring your ideas to life.</h2>
                <p>Sign up for free and enjoy access to all features for 30 days. No credit card required!</p>
            </div>
        </div>
    </div>

    <script>
        const form = document.querySelector('#login-form');
        const usernameErrDiv = document.querySelector('.username.error');
        const passwordErrDiv = document.querySelector('.password.error');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const username = document.querySelector('#username').value;
            const password = document.querySelector('#password').value;

            usernameErrDiv.textContent = '';
            passwordErrDiv.textContent = '';

            try {
                const res = await fetch('/v1/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username, password })
                });
                const data = await res.json();

                if (res.status === 200) {
                    localStorage.setItem('access_token', data.access_token);
                    alert('Login successful!');
                    window.location.href = '/';
                } else {
                    passwordErrDiv.textContent = data.error || 'Login failed';
                }
            } catch (error) {
                passwordErrDiv.textContent = 'Something went wrong.';
            }
        });
    </script>
</body>

</html>